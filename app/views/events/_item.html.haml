%li.event
  = link_to load_ksapi(event_path(event), event.custom_title) do
    .title
      %span= event.custom_title
    .kakesan.clearfix
      .box
        = event.where
      .kake
        %span ×
      .box
        %span= event.who
      .kake
        %span ×
      .box
        %span= event.what
    .description.no-wrap
      %span= event.description
  .info.clearfix
    = link_to load_ksapi(user_path(event.user), event.user.nickname) do
      .photo.left{style: "background: url(#{event.user.image}) no-repeat center; background-size: cover;"}
      .name.left
        %span= event.user.nickname
    .time.right
      %span= twitter_like_time(event.created_at)
