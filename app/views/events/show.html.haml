- content_for :foot do
  :coffeescript
    $ ->
      $("#comment_body").bind "keydown keyup keypress change", ->
        if $(this).val().length > 0
          $('#comment_button').removeAttr("disabled");
        else
          $('#comment_button').attr("disabled","disabled")
#event-page
  #wrapper
    .event
      .kakesan.clearfix
        .box
          = @event.where
        .kake
          %span ×
        .box
          %span= @event.who
        .kake
          %span ×
        .box
          %span= @event.what
      .info.clearfix
        .photo.left{style: "background: url(#{@event.user.image}) no-repeat center; background-size: cover;"}
        = link_to load_ksapi(user_path(@event.user), @event.user.nickname) do
          .name.left
            %span= @event.user.nickname
          .time.right
            %span= twitter_like_time(@event.created_at)
      .description.bottom
        = simple_format @event.description
      .column
        .label.mini
          %span 参加者
        #participants.clearfix
          - @event.participants.each do |participant|
            = link_to load_ksapi(user_path(participant), participant.nickname) do
              = image_tag participant.image
    .column
      .label.mini
        %span チャット
      = form_for @comment do |f|
        = f.hidden_field :user_id
        = f.hidden_field :event_id
        .clearfix
          .body.left= f.text_area :body,  maxlength: Comment::MAX_LENGTH
          .left= f.submit '送信', id: 'comment_button', class: 'button mini', disabled: true
    - @event.comments.each do |comment|
      .comment
        .info.clearfix
          = link_to load_ksapi(user_path(comment.user), comment.user.nickname) do
            .photo.left{style: "background: url(#{comment.user.image}) no-repeat center; background-size: cover;"}
            .name.left
              %span= comment.user.nickname
          .time.right
            %span= twitter_like_time(comment.created_at)
        .body
          = simple_format comment.body


